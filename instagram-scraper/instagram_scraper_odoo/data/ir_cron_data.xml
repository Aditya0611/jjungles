<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron to Run Scraper Script -->
        <record id="ir_cron_run_scraper" model="ir.cron">
            <field name="name">Instagram Scraper: Run Job</field>
            <field name="model_id" ref="model_instagram_scraper_config"/>
            <field name="state">code</field>
            <field name="code">model.run_cron_scraper()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">6</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron to Sync Data to Odoo Dashboard -->
        <record id="ir_cron_sync_trends" model="ir.cron">
            <field name="name">Instagram Scraper: Sync Trends</field>
            <field name="model_id" ref="model_instagram_trend"/>
            <field name="state">code</field>
            <field name="code">model.run_cron_sync()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
