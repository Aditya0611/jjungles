<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Scheduled Action: Sync Scheduler Settings to Supabase -->
    <record id="ir_cron_sync_scheduler_settings" model="ir.cron">
        <field name="name">Sync Scheduler Settings to Supabase</field>
        <field name="model_id" ref="model_scheduler_settings"/>
        <field name="state">code</field>
        <field name="code">model.sync_to_supabase()</field>
        <field name="interval_number">5</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
        <field name="doall" eval="False"/>
    </record>

    <!-- Scheduled Action: Run Queue Worker (Offline Uploads & Retries) -->
    <record id="ir_cron_run_queue_worker" model="ir.cron">
